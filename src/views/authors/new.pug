extends ../layouts/layout

block content
 .container 
   if locals.errorMessage
        = errorMessage
        
   h2 New Author     
   form(action="/authors" method="POST")
     label(for="name") Name
     input(placeholder="Name", type="text" name="name" value=author.name)
     div
      a(href="/authors") Cancel
      button(type="submit") Create  