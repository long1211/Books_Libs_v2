extends ../layouts/layout
block content
   .container
      .row.mt-5
        .col-lg-3
        .col-lg-6
          ul
           .row
            .col-lg-6.p-2
                  li
                    a(href="") 
                      img(src=book.ImageUrl, class="img-item")
            .col-lg-6.p-2   
                  li.d-flex.mb-2.text-capitalize 
                    .font-weight-bold Title:&nbsp;
                    = book.title
                  li.d-flex.mb-2.text-capitalize 
                    .font-weight-bold Author:&nbsp;
                    = book.author.name  
                  li.d-flex.mb-2.text-capitalize 
                    .font-weight-bold Description:&nbsp;
                    = book.description
                  li.d-flex.mb-2.text-capitalize 
                    .font-weight-bold PageCount:&nbsp;
                    = book.pageCount
                  li.d-flex.mb-2.text-capitalize 
                    .font-weight-bold publishDate:&nbsp;
                    = book.publishDate.toDateString()
                  .d-flex.mt-3  
                    a(href='/books/' + book.id +'/edit' class="d-flex align-items-center pr-2") Edit
                    form(method="POST" action="/books/" + book.id + "?_method=DELETE")
                        button(type='submit' class="btn btn-danger") Delete    
                  a(href='/authors/' + book.author.id, class="mt-2 d-flex") View Author
        .col-lg-3        